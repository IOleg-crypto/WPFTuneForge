<UserControl x:Class="WpfTuneForgePlayer.Sidebar" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="185" Background="Black">

    <Grid Margin="10" VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Займе весь доступний простір -->
            <RowDefinition Height="Auto"/>
            <!-- Під кнопку Close -->
        </Grid.RowDefinitions>

        <!-- Верхня частина зі всіма кнопками крім Close -->
        <StackPanel Grid.Row="0">
            <Button Margin="0,5" Padding="5" HorizontalContentAlignment="Left" Background="Transparent" BorderBrush="Transparent" Foreground="White" >
                <StackPanel Orientation="Horizontal" >
                    <Image x:Name="FavoriteSong" Source="/favoriter.png" Width="24" Height="24" Margin="0,0,10,0">
                    </Image>
                    <TextBlock VerticalAlignment="Center" FontSize="14">Favorite</TextBlock>
                </StackPanel>
            </Button>

            <Button Margin="0,5" Padding="5" HorizontalContentAlignment="Left" Background="Transparent" BorderBrush="Transparent" Foreground="White" >
                <StackPanel Orientation="Horizontal" >
                    <Image Source="language.png" Width="24" Height="24" Margin="0,0,10,0">
                    </Image>
                    <TextBlock VerticalAlignment="Center" FontSize="14">Language</TextBlock>
                </StackPanel>
            </Button>

            <Button x:Name="SelectMusic" Click="MusicClick" Margin="0,5" Padding="5" HorizontalContentAlignment="Left" Background="Transparent" BorderBrush="Transparent" Foreground="White" >
                <StackPanel Orientation="Horizontal" >
                    <Image Source="/music.png" Width="24" Height="24" Margin="0,0,10,0">
                    </Image>
                    <TextBlock VerticalAlignment="Center" FontSize="14">Music</TextBlock>
                </StackPanel>
            </Button>

            <Button Margin="0,5" Padding="5" HorizontalContentAlignment="Left" Background="Transparent" BorderBrush="Transparent" Foreground="White" >
                <StackPanel Orientation="Horizontal" >
                    <Image Source="/settings.png" Width="24" Height="24" Margin="0,0,10,0">
                    </Image>
                    <TextBlock VerticalAlignment="Center" FontSize="14">Settings</TextBlock>
                </StackPanel>
            </Button>

            <Separator Margin="0,10"/>
        </StackPanel>

        <!-- Нижня кнопка Close -->
        <Button Grid.Row="1" Click="CloseSidebar" Margin="0,5" Padding="5" HorizontalContentAlignment="Left" Background="Transparent" BorderBrush="Transparent" Foreground="White" >
            <StackPanel Orientation="Horizontal" >
                <Image Source="/exit.png" Width="24" Height="24" Margin="0,0,10,0">
                </Image>
                <TextBlock VerticalAlignment="Center" FontSize="14">Close</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
