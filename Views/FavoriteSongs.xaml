<Page 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:WpfTuneForgePlayer.Views"
    x:Class="WpfTuneForgePlayer.Views.FavoriteSongs"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    TextOptions.TextRenderingMode="ClearType"
    TextOptions.TextFormattingMode="Display"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    Background="#FF0A0A0A"
    Title="FavoriteSongs">

    <Page.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <TextBlock Text="🎵 Favorite Songs"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="Cyan"
                   Margin="0,0,0,20"
                   TextOptions.TextRenderingMode="ClearType"
                   >
            <TextBlock.Effect>
                <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Background="#22FFFFFF" 
                CornerRadius="10"
                Padding="15"
                Margin="0,60,0,0"
                Effect="{DynamicResource BlurEffect}">

            <DataGrid x:Name="FavoriteSongsGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowBackground="#22000000"
                      AlternatingRowBackground="#33000000"
                      Foreground="White"
                      GridLinesVisibility="None"
                      Background="Transparent"
                      IsEnabled ="False"
                      BorderThickness="0"
                      FontSize="16"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      ScrollViewer.CanContentScroll="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="🎧 Title"  Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="👤 Artist" Binding="{Binding Artist}" Width="2*" />
                    <DataGridTextColumn Header="⏱ Duration" Binding="{Binding Duration}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
