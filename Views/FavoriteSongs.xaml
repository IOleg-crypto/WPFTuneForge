<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTuneForgePlayer.Views"
      xmlns:editors="http://schemas.actiprosoftware.com/winfx/xaml/editors" x:Class="WpfTuneForgePlayer.Views.FavoriteSongs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      TextOptions.TextRenderingMode="ClearType"
      TextOptions.TextFormattingMode="Display"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      Background="Black"
      Title="FavoriteSongs">

    <Grid Margin="20">
        <Label Content="🎵 Favorite Songs" 
               FontSize="24"
               FontWeight="Bold"
               Foreground="White"
               Margin="0,0,0,10"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <DataGrid x:Name="FavoriteSongsGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  RowBackground="Black"
                  AlternatingRowBackground="#111"
                  Foreground="White"
                  GridLinesVisibility="None"
                  Margin="0,50,0,0"
                  Background="Transparent"
                  BorderThickness="0"
                  FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="2*" />
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
