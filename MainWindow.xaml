<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WpfTuneForgePlayer.MainWindow"
        Title="TuneForge" Height="450" Width="800"
        MinWidth="960" MinHeight="480"
        Background="Black">

    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="800" Height="450" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="43*" />
                </Grid.RowDefinitions>

                <Grid VerticalAlignment="Top" Height="120" Margin="0,280,0,0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="267*" />
                        <ColumnDefinition Width="267*" />
                        <ColumnDefinition Width="180*" />
                        <ColumnDefinition Width="86*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/previous.png" Grid.Column="1" Width="80" MinWidth="120"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,62,0,0"/>

                    <Image Source="/pause.png" Grid.Column="1" Margin="90,46,87,-16" />

                    <Image Source="/next.png" Grid.Column="1" Width="80" 
                           HorizontalAlignment="Left" Margin="178,51,0,-11"/>

                    <Label x:Name="startMusicLabel" Content="00:00" Foreground="White" FontSize="14"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="56,54,0,0" Grid.Column="0"/>
                    <Label x:Name="endMusicLabel" Content="00:00" Foreground="White" FontSize="14"
                           Grid.Column="3" RenderTransformOrigin="0.211,0.202" Margin="16,44,0,46" HorizontalAlignment="Left" av:LayoutOverrides="Height"/>
                    <Slider Margin="49,16,28,-414" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="4" av:LayoutOverrides="VerticalAlignment"/>
                    <Image Margin="161,-8,0,109" Source="/songHaoticPlaylist.png" RenderTransformOrigin="0.264,0.021" Grid.Column="2" HorizontalAlignment="Left" Width="35"/>
                    <Image Margin="112,-8,34,109" Source="/favorite_a.png" RenderTransformOrigin="0.264,0.021" Grid.Column="2"/>
                    <Image Margin="21,-8,31,109" Source="/repeatSong.png" RenderTransformOrigin="0.264,0.021" Grid.Column="3" av:LayoutOverrides="HorizontalAlignment"/>
                </Grid>
                <Image Margin="311,10,311,0" Grid.Row="1" Height="152" VerticalAlignment="Top">
                    <Image.OpacityMask>
                        <ImageBrush/>
                    </Image.OpacityMask>
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <Label Content="Unknown"  Foreground="White" Margin="376,186,0,0" Grid.Row="1" VerticalAlignment="Top" av:LayoutOverrides="VerticalAlignment" FontSize="14" HorizontalAlignment="Left"/>
                <Label Content="Unknown" Foreground="White" Height="24" Margin="379,229,356,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" av:LayoutOverrides="HorizontalAlignment">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.165"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Image Grid.Row="1" RenderTransformOrigin="-0.346,0.486" Margin="42,264,734,144" Source="/volume-high_new.png"/>
            </Grid>
        </Viewbox>

        <Button x:Name="SideBar"
                Content="≡"
                Width="47"
                Height="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="5"
                Background="Black"
                FontWeight="Bold"
                Foreground="#FFFFF6F6"
                BorderBrush="Black" />
    </Grid>
</Window>
