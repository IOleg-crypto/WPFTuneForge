<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfTuneForgePlayer="clr-namespace:WpfTuneForgePlayer"
    mc:Ignorable="av"
    x:Class="WpfTuneForgePlayer.MainWindow"
    Title="TuneForge"
    Height="450"
    Width="800"
    MinWidth="960"
    MinHeight="480"
    Background="Black">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- Sidebar -->
            <ColumnDefinition Width="*"/>   <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <wpfTuneForgePlayer:Sidebar x:Name="Sidebar"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Stretch"/>

        <!-- Main content -->
        <Grid Grid.Column="1">
            <!-- Button ≡ to open Sidebar -->
            <Button x:Name="SideBar"
                    Content="≡"
                    Width="50"
                    Height="45"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="2"
                    Background="Black"
                    FontWeight="Bold"
                    Foreground="#FFFFF6F6"
                    BorderBrush="Black"
                    Click="ToggleSidebar"/>

            <!-- Viewbox with main UI -->
            <Viewbox Stretch="Uniform">
                <Grid Width="800" Height="450" Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="43*" />
                    </Grid.RowDefinitions>
                    
                    
                    <Grid VerticalAlignment="Top" Height="120" Margin="0,280,0,0" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="267*" />
                            <ColumnDefinition Width="267*" />
                            <ColumnDefinition Width="180*" />
                            <ColumnDefinition Width="86*" />
                        </Grid.ColumnDefinitions>
                        
                        

                        <Grid Grid.Column="1">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Margin="0,46,0,0"
                                        Height="80" >
                                <Button Style="{StaticResource ImageButtonStyle}" BorderBrush = "Transparent"
                                        Margin="5,0">
                                    <Image Source="/previous.png" Width="60"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}" Click="OnClickMusic"
                                        BorderBrush = "Transparent" Cursor="Hand" Margin="5,0">
                                    <Image Source="/pause.png" Width="60"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}" BorderBrush = "Transparent"
                                        Margin="5,0">
                                    <Image Source="/next.png" Width="60"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                       

                        <Label x:Name="StartMusicLabel" Content="00:00" Foreground="White" FontSize="14"
                               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="56,54,0,0" Grid.Column="0"/>
                        <Label x:Name="EndMusicLabel" Content="00:00" Foreground="White" FontSize="14"
                               Grid.Column="3" Margin="16,44,0,46" HorizontalAlignment="Left"/>

                        <Slider x:Name = "MusicTrackBar" Margin="49,16,28,-414" Grid.ColumnSpan="4"
                                Grid.Column="0" />
                        <Image Margin="161,-8,0,109" Source="/songHaoticPlaylist.png" Grid.Column="2" HorizontalAlignment="Left" Width="35"/>
                        <Image Margin="112,-8,34,109" Source="/favorite_a.png" Grid.Column="2"/>
                        <Image Margin="21,-8,31,109" Source="/repeatSong.png" Grid.Column="3"/>
                    </Grid>

                    <Image x:Name = "MusicLogo" Margin="311,10,311,0" Grid.Row="1" Height="152" VerticalAlignment="Top">
                        <Image.OpacityMask>
                            <ImageBrush/>
                        </Image.OpacityMask>
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0"/>
                                <RotateTransform/>
                                <TranslateTransform Y="0"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                    <Label x:Name = "NameSong" Content="Unknown"  Foreground="White" Margin="376,186,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left"/>
                    <Label x:Name = "NameArtist" Content="Unknown" Foreground="White" Height="24" Margin="379,229,356,0" Grid.Row="1" VerticalAlignment="Top">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.165"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>

                    <Image Grid.Row="1" Margin="42,264,734,144" Source="/volume-high_new.png"/>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
