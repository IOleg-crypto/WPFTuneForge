<Page x:Class="WpfTuneForgePlayer.MusicDirectory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Black"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1A1A1A" CornerRadius="6" Padding="8" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackToMainPage">
                    <Image Source="pack://siteoforigin:,,,/assets/sidebar/exit2.png" Stretch="Uniform"/>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="TuneForge"
                           Foreground="White"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Вибір папки -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            >
                    <TextBlock Text="Choose folder"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Width="28" Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            >
                        <Image Source="pack://siteoforigin:,,,/assets/menu/folderchoose.png" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       ItemWidth="160"
                       ItemHeight="240"
                       Margin="0,0,0,10">

                <Border Background="#222"
                        CornerRadius="8"
                        Margin="2"
                        Width="160"
                        Height="240"
                        HorizontalAlignment="Left"
                        >
                    <StackPanel>
                        <Image
                               Height="140"
                               Stretch="UniformToFill"
                               Margin="0,0,0,4"
                               ClipToBounds="True"
                               />

                        <Separator Margin="4,0" Background="#444"/>

                        <TextBlock Text="Artist Name" 
                                   Foreground="#DDD"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment ="Center"
                                   Margin="6,4,6,0"
                                   TextTrimming="CharacterEllipsis"/>

                        <TextBlock Text="Song Title" 
                                   Foreground="White"
                                   Margin="6,0,6,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="13"/>

                        <TextBlock Text="03:45"
                                   Foreground="#888"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#222"
                        CornerRadius="5"
                        Margin="2"
                        Width="160"
                        HorizontalAlignment="Left"
                        Height="240"
                        >
                    <StackPanel>
                        <Image
                               Height="140"
                               Stretch="UniformToFill"
                               Margin="0,0,0,4"
                               ClipToBounds="True"
                               />

                        <Separator Margin="4,0" Background="#444"/>

                        <TextBlock Text="Another Artist"
                                   Foreground="#DDD"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment ="Center"
                                   Margin="6,4,6,0"
                                   TextTrimming="CharacterEllipsis"/>

                        <TextBlock Text="Another Song"
                                   Foreground="White"
                                   Margin="6,0,6,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="13"/>

                        <TextBlock Text="04:12"
                                   Foreground="#888"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
